{
    "compilerOptions": {
        "target": "es2019",
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": ["es2019"],
        "sourceMap": true,
        "outDir": "./dist",
        //"rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "allowJs": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "paths": {
          "@src/*": ["modules/*"],
          "@test/*": ["config/*"]
        },
        "rootDirs": [
          "./src",
          "./test"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*.ts",
      "./test/**/*.ts"
    ],
    "exclude": [
      "./node_modules/*",
      "dist"
    ]
}